generator client {
  provider = "prisma-client-js" 
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int     @id @default(autoincrement())
  firstName String
  lastName  String
  email     String  @unique
  password  String
  status    Boolean @default(true)  
  kycStatus KycStatus @default(pending)
  role      Role  @default(user) 
  createdAt DateTime @default(now())
}

enum Role {
  user
  admin
}
enum KycStatus {
  pending
  approved
  rejected 
  none
}